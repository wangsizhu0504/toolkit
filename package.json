{
  "name": "@kriszu/toolkit",
  "type": "module",
  "version": "1.0.2",
  "description": "A collection of common JavaScript / TypeScript utils",
  "author": "Kriszu",
  "license": "MIT",
  "keywords": [
    "utils",
    "utilities library",
    "toolkit"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts",
    "./is": "./src/is/index.ts",
    "./function": "./src/function/index.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.mts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        }
      },
      "./is": {
        "import": {
          "types": "./dist/is/index.d.mts",
          "default": "./dist/is/index.mjs"
        },
        "require": {
          "types": "./dist/is/index.d.ts",
          "default": "./dist/is/index.js"
        }
      },
      "./function": {
        "import": {
          "types": "./dist/function/index.d.mts",
          "default": "./dist/function/index.mjs"
        },
        "require": {
          "types": "./dist/function/index.d.ts",
          "default": "./dist/function/index.js"
        }
      },
      "./package.json": "./package.json"
    }
  },
  "files": [
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "prepare": "simple-git-hooks",
    "build": "rimraf dist && rollup -c && scripts/post-build.sh",
    "dev": "npm run build --watch",
    "clean": "rimraf node_modules dist",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "release": "bumpp --commit --push --tag && npm publish",
    "start": "esno src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest --coverage --typecheck"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec nano-staged --allow-empty"
  },
  "nano-staged": {
    "*.{ts}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@kriszu/eslint-config": "latest",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/node": "^22.10.0",
    "@vitest/coverage-istanbul": "^2.1.6",
    "bumpp": "^9.8.1",
    "eslint": "^9.15.0",
    "esno": "^4.8.0",
    "jsdom": "^25.0.1",
    "nano-staged": "0.8.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.27.4",
    "rollup-plugin-dts": "^6.1.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.6"
  }
}
